include header.jade
.container
    h2.text-center(ng-show="!user.authenticated") You must #[a.clickable(ng-click="login()") login] to use Pathfinder Character Manager

    h2.text-center(ng-show="user.authenticated && !characterSelected") Welcome {{user.username}}! Please select one of your characters:
        select.characterSelect.form-control(ng-model="characterSelect", ng-change="characterSelectChange()")
            option
            option Ren'Del Treeborne

    .characterSheet(ng-show="user.authenticated && characterSelected", ng-viewport)

script(type="text/ng-template" id="statsSkills.html")
    include component/statsSkills.jade

script(type="text/ng-template" id="equipmentAbilities.html")
    include component/equipmentAbilities.jade

script(type="text/ng-template" id="spells.html")
    include component/spells.jade

script(type="text/ng-template" id="loreBackstory.html")
    include component/loreBackstory.jade

script(type="text/ng-template" id="loginModal.html")
    include loginModal.jade