.characterInfo
    .characterInfoContainer
        .characterInfoElement
            label Player Name
            input(type="text", ng-model="statsSkills.character.playerName")

        .characterInfoElement
            label Character Name
            input(type="text", ng-model="statsSkills.character.characterName")

        .characterInfoElement
            label Alignment
            select(ng-model="statsSkills.character.alignment", ng-options="a for a in statsSkills.alignments")

        .characterInfoElement
            label Race
            select(ng-model="statsSkills.character.race", ng-options="r for r in statsSkills.races")

        .characterInfoElement
            label Level
            input(type="text", ng-value="statsSkills.getTotalLevel()", disabled="disabled", size="2")

        .characterInfoElement
            label Experience
            input.largeNumber(type="number", ng-model="statsSkills.character.experience", maxlength="7")

        .characterInfoElement
            label Size
            input(type="text", value="Medium", disabled, size="7")

        .characterInfoElement(ng-repeat="classObj in statsSkills.character.classes")
            label Class
            .characterClassBlock
                span: select(ng-model="classObj.name", ng-options="c for c in statsSkills.classes")
                span: input.smallNumber(type="number", ng-model="classObj.level", size="2")

.characterStatBlocks
    table.table.table-responsive.infoBlockContainer.characterAbilityScores
        thead
            tr
                th Ability
                th Score
                th Temp
                th Mod
        tbody
            tr(ng-repeat="ability in statsSkills.abilities")
                td.statLabel: label {{ability.substr(0, 3).toUpperCase()}}
                td: input.smallNumber(type="number", ng-model="statsSkills.character.abilities[ability].score")
                td: input.smallNumber(type="number", ng-model="statsSkills.character.abilities[ability].temp")
                td: input(type="text", disabled, ng-value="statsSkills.getAbilityModifier(ability)", size="1")
            tr
                td.characterSkills(colspan="4"): table.table.table-responsive
                    thead
                        tr
                            th Skill
                            th Ranks
                            th Mod
                    tbody
                        tr(ng-repeat="skill in statsSkills.skills")
                            td.statLabel {{camelSkill = statsSkills.camelCase(skill);""}}
                                label(ng-class="{classSkill: statsSkills.isClassSkill(camelSkill)}") {{skill}}
                            td: input.smallNumber(type="number", ng-model="statsSkills.character.skills[camelSkill]")
                            td: input(type="text", disabled, ng-value="statsSkills.getSkillModifier(camelSkill)", size="2")

    table.table.table-responsive.infoBlockContainer.characterCoreStats
        thead
            tr: th(colspan=4) Core Stats
        tbody
            tr
                td.statLabel: label Speed
                td: input(type="text", value="40", disabled, size="1")
            tr
                td.statLabel: label Initiative
                td: input(type="text", ng-value="statsSkills.getInitiative()", disabled, size="1")
            tr
                td.statLabel: label Hit Points
                td: .coreStatBlock
                    label Max
                    input.smallNumber(type="number", ng-model="statsSkills.character.maxHitPoints")
                td: .coreStatBlock
                    label Cur
                    input.smallNumber(type="number", ng-model="statsSkills.character.currentHitPoints")
            tr
                td.statLabel: label Combat Maneuvers
                td: .coreStatBlock
                    label CMB
                    input(type="text", ng-value="statsSkills.getCombatManeuverBonus()", disabled, size="1")
                td: .coreStatBlock
                    label CMD
                    input(type="text", ng-value="statsSkills.getCombatManeuverDefense()", disabled, size="1")
            tr
                td.statLabel: label Armor Class
                td: .coreStatBlock
                    label Normal
                    input(type="text", ng-value="statsSkills.getNormalArmorClass()", disabled, size="1")
                td: .coreStatBlock
                    label Touch
                    input(type="text", ng-value="statsSkills.getTouchArmorClass()", disabled, size="1")
                td: .coreStatBlock
                    label Flat
                    input(type="text", ng-value="statsSkills.getFlatFootedArmorClass()", disabled, size="1")
            tr
                td.statLabel: label Saves
                td: .coreStatBlock
                    label Fort
                    input(type="text", ng-value="statsSkills.getFortSave()", disabled, size="1")
                td: .coreStatBlock
                    label Reflex
                    input(type="text", ng-value="statsSkills.getReflexSave()", disabled, size="1")
                td: .coreStatBlock
                    label Will
                    input(type="text", ng-value="statsSkills.getWillSave()", disabled, size="1")
            tr
                td.statLabel: label Base Attack Bonus
                td: input(type="text", ng-value="statsSkills.getBaseAttackBonus()", disabled, size="1")
            tr
                td(colspan="5").characterWeapons: table.table.table-responsive
                    thead
                        tr
                            th Weapon
                            th ATK
                            th Crit
                            th Range
                            th Damage
                    tbody
                        tr(ng-repeat="(index, weapon) in statsSkills.character.weapons")
                            td.statLabel: label {{weapon.name}}
                            td.weaponFieldContainer: span.weaponField {{statsSkills.getWeaponAttackBonus(weapon)}}
                            td.weaponFieldContainer: span.weaponField {{weapon.crit}}
                            td.weaponFieldContainer: span.weaponField {{weapon.range}}
                            td.weaponFieldContainer: span.weaponField {{statsSkills.getWeaponDamageString(weapon)}}
                            td.deleteRow(ng-click="statsSkills.deleteWeapon(index)") X
                        tr
                            td.addRow(colspan="5") + Add Weapon