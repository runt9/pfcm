.characterInfo
    .characterInfoContainer
        .characterInfoElement
            label Player Name
            input(type="text", ng-model="statsSkills.character.playerName")

        .characterInfoElement
            label Character Name
            input(type="text", ng-model="statsSkills.character.characterName")

        .characterInfoElement
            label Alignment
            select(ng-model="statsSkills.character.alignment", ng-options="a for a in statsSkills.alignments")

        .characterInfoElement
            label Race
            select(ng-model="statsSkills.character.race", ng-options="r for r in statsSkills.races")

        .characterInfoElement
            label Level
            input(type="text", ng-value="statsSkills.getTotalLevel()", disabled="disabled", size="2")

        .characterInfoElement
            label Experience
            input.hugeNumber(type="number", ng-model="statsSkills.character.experience", maxlength="7")

        .characterInfoElement
            label Size
            input(type="text", value="Medium", disabled, size="7")

        .characterInfoElement(ng-repeat="classObj in statsSkills.character.classes")
            label Class
            .characterClassBlock
                span: select(ng-model="classObj.name", ng-options="c for c in statsSkills.classes")
                span: input.smallNumber(type="number", ng-model="classObj.level", size="2")

.characterStatBlocks
    table.table.table-responsive.infoBlockContainer.characterAbilityScores
        thead
            tr
                th Ability
                th Score
                th Temp
                th Mod
        tbody
            tr(ng-repeat="ability in statsSkills.abilities")
                td.statLabel: label {{ability.substr(0, 3).toUpperCase()}}
                td: input.smallNumber(type="number", ng-model="statsSkills.character.abilities[ability].score")
                td: input.smallNumber(type="number", ng-model="statsSkills.character.abilities[ability].temp")
                td: input(type="text", disabled, ng-value="statsSkills.getAbilityModifier(ability)", size="1")

    table.table.table-responsive.infoBlockContainer.characterCoreStats
        thead
            tr: th(colspan=4) Core Stats
        tbody
            tr
                td.statLabel: label Speed
                td: input.smallNumber(type="number", value="40", disabled)
            tr
                td.statLabel: label Initiative
                td: input.smallNumber(type="number", ng-value="statsSkills.getInitiative()", disabled)
            tr
                td.statLabel: label Hit Points
                td: .coreStatBlock
                    label Max
                    input.smallNumber(type="number", ng-model="statsSkills.character.maxHitPoints")
                td: .coreStatBlock
                    label Cur
                    input.smallNumber(type="number", ng-model="statsSkills.character.currentHitPoints")
            tr
                td.statLabel: label Combat Maneuvers
                td: .coreStatBlock
                    label CMB
                    input.smallNumber(type="number", ng-value="statsSkills.getCombatManeuverBonus()", disabled)
                td: .coreStatBlock
                    label CMD
                    input.smallNumber(type="number", ng-value="statsSkills.getCombatManeuverDefense()", disabled)
            tr
                td.statLabel: label Armor Class
                td: .coreStatBlock
                    label Normal
                    input.smallNumber(type="number", ng-value="statsSkills.getNormalArmorClass()", disabled)
                td: .coreStatBlock
                    label Touch
                    input.smallNumber(type="number", ng-value="statsSkills.getTouchArmorClass()", disabled)
                td: .coreStatBlock
                    label Flat
                    input.smallNumber(type="number", ng-value="statsSkills.getFlatFootedArmorClass()", disabled)
            tr
                td.statLabel: label Saves
                td: .coreStatBlock
                    label Fort
                    input.smallNumber(type="number", ng-value="statsSkills.getFortSave()", disabled)
                td: .coreStatBlock
                    label Reflex
                    input.smallNumber(type="number", ng-value="statsSkills.getReflexSave()", disabled)
                td: .coreStatBlock
                    label Will
                    input.smallNumber(type="number", ng-value="statsSkills.getWillSave()", disabled)
            tr
                td.statLabel: label Base Attack Bonus
                td(colspan=3): input.smallNumber(type="number", ng-value="statsSkills.getBaseAttackBonus()", disabled)
            tr
                td(colspan="4"): table.table.table-responsive.characterWeapons
                    thead
                        tr
                            th Weapon
                            th ATK
                            th Crit
                            th Range
                            th Damage
                    tbody
                        tr(ng-repeat="weapon in statsSkills.character.weapons")
                            td.statLabel: label Greatclub
                            td: input.smallNumber(type="number", ng-value="statsSkills.getWeaponAttackBonus(weapon)", disabled)
                            td: input(type="text", ng-value="weapon.crit", disabled, size="5")
                            td: input(type="text", ng-value="weapon.range", disabled, size="2")
                            td: input(type="text", ng-value="statsSkills.getWeaponDamageString(weapon)", disabled, size="7")
                        tr
                            td.addRow(colspan="5") + Add Weapon


    table.table.table-responsive.infoBlockContainer.characterSkills
        thead
            tr
                th Skill
                th Ranks
                th Mod
        tbody
            tr(ng-repeat="skill in statsSkills.skills")
                td.statLabel {{camelSkill = statsSkills.camelCase(skill);""}}
                    label(ng-class="{classSkill: statsSkills.isClassSkill(camelSkill)}") {{skill}}
                td: input.smallNumber(type="number", ng-model="statsSkills.character.skills[camelSkill]")
                td: input(type="text", disabled, ng-value="statsSkills.getSkillModifier(camelSkill)", size="2")