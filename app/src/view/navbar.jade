.navbar.navbar-default(role='navigation')
    .navbar-header
        a.navbar-brand(href='#') Pathfinder Character Manager
    .navbar-collapse.collapse
        ul.nav.navbar-nav(ng-show="user.authenticated")
            li(ng-class="{active: isActive('/statsSkills')}"): a(ng-link="statsSkills").clickable Stats and Skills
            li(ng-class="{active: isActive('/equipmentAbilities')}"): a(ng-link="equipmentAbilities").clickable Equipment and Abilities
            li(ng-class="{active: isActive('/spells')}"): a(ng-link="spells").clickable Spells
            li(ng-class="{active: isActive('/loreBackstory')}"): a(ng-link="loreBackstory").clickable Lore and Backstory
        ul.nav.navbar-nav.navbar-right
            li(ng-show="user.authenticated", ng-click="logout()"): a.clickable Logout
            li(ng-show="!user.authenticated", ng-click="login()"): a.clickable Login